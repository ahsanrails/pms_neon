<p id="notice"><%= notice %></p>

<ol class="breadcrumb bc-3"> <li> <a href="#"><i class="entypo-home"></i>Home</a> </li> <li> <a href="/resources/new"><i class="entypo-users"></i>Add Resource</a> </li> <li class="active"> <strong>Resources</strong> </li>
</ol>

<div class="row">
<div class="col-md-10 col-md-offset-1">
<h4>Resources Detail</h4>

<table class="table table-condensed table-bordered table-hover table-striped">
  <thead>
    <tr>
      <th><strong>Name</strong></th>
      <th><strong>Job title</strong></th>
      <th><strong>Email</strong></th>
      <th><strong>Username</strong></th>
      <th><strong>Password</strong></th>
      <th><strong>Cnic</strong></th>
      <th><strong>Experience</strong></th>
      <th><strong>Status</strong></th>
      <th><strong>Require training</strong></th>
      <th><strong>Date add</strong></th>
      <th><strong>Date update</strong></th>
      <th colspan="3"><strong>Actions</strong></th>
    </tr>
  </thead>

  <tbody>
    <% @resources.each do |resource| %>
      <tr>
        <td><%= resource.name %></td>
        <td><%= resource.job_title %></td>
        <td><%= resource.email %></td>
        <td><%= resource.username %></td>
        <td><%= resource.password %></td>
        <td><%= resource.cnic %></td>
        <td><%= resource.experience %></td>
        <td><%= resource.status %></td>
        <td><%= resource.require_training %></td>
        <td><%= resource.date_add %></td>
        <td><%= resource.date_update %></td>
        <td><%= link_to '', resource, class: 'entypo-search' %></td>
        <td><%= link_to '', edit_resource_path(resource), class: 'entypo-pencil' %></td>
        <td><%= link_to '', resource, method: :delete, data: { confirm: 'Are you sure?' }, class: 'entypo-trash' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Resource', new_resource_path, class: 'btn btn-primary' %>
</div>

</div>
<br>


